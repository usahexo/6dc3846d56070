<% if (site.posts.length){ %>
<div class="widget">
    <h3 class="widget-title"><%= __('widget.recent_posts') %></h3>
    <div class="widget-body">
        <ul class="recent-post-list list-unstyled">
            <% site.posts.sort('date', -1).limit(5).each(function(post){ %>
                <li>
                    <div class="recent-post">
                        <p class="item-category">
                            <%- list_categories(post.categories, {show_count: false, depth:2, class: 'category', style: 'none', separator: '<i class="iconfont icon-angle-right"></i>'}) %>
                        </p>
                        <p class="item-title">
                            <a href="<%- url_for((post.link?post.link:post.path)) %>" class="title"><%= post.title || '(no title)' %></a>
                        </p>
                        <p class="item-date">
                            <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date) %></time>
                        </p>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>
</div>
<% } %>
