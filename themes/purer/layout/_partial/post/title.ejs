<% if (post.link) { /* Boolean('') => false */ %>
    <h1 itemprop="name text-lg">
        <a class="<%= className %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
    </h1>
<% } else if (post.title){ %>
    <% if (index){ %>
        <h1 itemprop="name">
            <a class="<%= className %> text-lg" href="<%- url_for(post.path) %>"><%= post.title %></a>
        </h1>
    <% } else { %>
        <h1 class="<%= className %> text-lg" itemprop="name">
            <%= post.title %>
        </h1>
    <% } %>
<% } %>

